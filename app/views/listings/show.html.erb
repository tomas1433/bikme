<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%=  @listing.photo? ? cloudinary_url(@listing.photo.path, width: 1280) : image_path("bikew.jpg") %>');">
  <div class="banner-content">
   <h1>
     <%= @listing.name %>
    </h1>
    <p>
      <%= @listing.description %>
      <span class="label label-default">
        <%= @listing.use %>
    </p>

    <div class="btn btn-primary btn-lg">Commander!</div>
  </div>
</div>